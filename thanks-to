<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thank You for Birthday Wishes - Anuj Mishra</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.2.19/tailwind.min.css" rel="stylesheet">
    <style>
        @keyframes heartBeat {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.2); }
        }
        @keyframes confetti {
            0% { transform: translateY(0) rotate(0deg); }
            100% { transform: translateY(100vh) rotate(360deg); }
        }
        @keyframes quoteAnimation {
            0% { opacity: 0; transform: scale(0.5); }
            50% { opacity: 1; transform: scale(1.1); }
            100% { opacity: 0; transform: scale(1.5); }
        }
        .confetti {
            position: absolute;
            width: 15px;
            height: 15px;
            background-color: transparent;
            opacity: 0.7;
            animation: confetti 3s linear infinite;
            z-index: 1000;
        }
        .heart {
            animation: heartBeat 1s infinite;
        }
        #quote-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 2000;
            pointer-events: none;
        }
        .quote-container {
            text-align: center;
            padding: 20px;
            border-radius: 20px;
            max-width: 80%;
            animation: quoteAnimation 3s ease-in-out;
        }
        .emoji-rain {
            position: fixed;
            font-size: 30px;
            z-index: 1500;
            pointer-events: none;
        }
    </style>
</head>
<body class="bg-gradient-to-r from-blue-500 to-purple-600 min-h-screen flex items-center justify-center">
    <div id="confetti-container" class="fixed top-0 left-0 w-full h-full pointer-events-none"></div>
    <div id="quote-overlay"></div>
    <div id="emoji-container" class="fixed top-0 left-0 w-full h-full pointer-events-none"></div>
    
    <div class="bg-white p-10 rounded-3xl shadow-2xl text-center transform transition duration-500 hover:scale-105 relative">
        <div class="absolute top-4 right-4 text-5xl heart">❤️</div>
        <h1 class="text-5xl font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-purple-600 mb-6">
            THANK YOU! 🙏
        </h1>
        
        <div class="text-2xl text-gray-800 mb-8">
            <p class="mb-4">A heartfelt THANK YOU to everyone who remembered my birthday!</p>
            <p class="italic text-xl text-gray-600">Your wishes made my day truly special!</p>
            <p class="font-bold text-3xl mt-4 text-purple-700">- Anuj Mishra</p>
        </div>
        
        <button onclick="spreadLove()" class="bg-gradient-to-r from-blue-500 to-purple-500 text-white font-bold py-3 px-6 rounded-full hover:from-blue-600 hover:to-purple-600 transition duration-300 transform hover:scale-110">
            Spread More Love!
        </button>
    </div>

    <script>
        const loveQuotes = [
            "Gratitude turns what we have into enough. 💖",
            "Love is the greatest gift we can give or receive. 🤗",
            "Kindness is love in action. 💕",
            "Your love lights up my world. ✨",
            "Friendship is the most precious treasure. 🌈",
            "Every wish is a drop of love. 💗",
            "Celebrating life, love, and connections! 🎉"
        ];

        const emojis = ['❤️', '💖', '💕', '💗', '🤗', '😍', '🥰', '✨', '🌈', '🎉'];

        function createConfetti() {
            const colors = ['#FF6B6B', '#4ECDC4', '#45B7D1', '#FDCB6E', '#6C5CE7'];
            const container = document.getElementById('confetti-container');
            
            for (let i = 0; i < 100; i++) {
                const confetti = document.createElement('div');
                confetti.classList.add('confetti');
                
                confetti.style.left = `${Math.random() * 100}%`;
                confetti.style.animationDelay = `${Math.random() * 3}s`;
                confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                
                container.appendChild(confetti);
            }

            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        function rainEmojis() {
            const container = document.getElementById('emoji-container');
            container.innerHTML = '';

            for (let i = 0; i < 50; i++) {
                const emoji = document.createElement('div');
                emoji.classList.add('emoji-rain');
                emoji.innerText = emojis[Math.floor(Math.random() * emojis.length)];
                
                emoji.style.left = `${Math.random() * 100}%`;
                emoji.style.animationDelay = `${Math.random() * 3}s`;
                emoji.style.animation = `confetti 3s linear infinite`;
                
                container.appendChild(emoji);
            }

            setTimeout(() => {
                container.innerHTML = '';
            }, 5000);
        }

        function showQuote() {
            const quoteOverlay = document.getElementById('quote-overlay');
            quoteOverlay.innerHTML = '';

            const quote = document.createElement('div');
            quote.classList.add('quote-container');
            quote.style.backgroundColor = `rgba(255, 255, 255, 0.9)`;
            quote.style.color = `#6C5CE7`;
            quote.style.fontSize = `2rem`;
            quote.style.fontWeight = 'bold';

            quote.innerText = loveQuotes[Math.floor(Math.random() * loveQuotes.length)];

            quoteOverlay.appendChild(quote);

            setTimeout(() => {
                quoteOverlay.innerHTML = '';
            }, 3500);
        }

        function spreadLove() {
            createConfetti();
            rainEmojis();
            showQuote();
        }
    </script>
</body>
</html>
